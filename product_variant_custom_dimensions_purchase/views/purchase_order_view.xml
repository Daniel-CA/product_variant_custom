<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="dimension_order_line_form">
            <field name="name">dimension.order.line.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/form//field[@name='company_id']" position="after">
                    <field name="invisible_dimension" invisible="1"/>
                    <field name="dimension" attrs="{'invisible': [('invisible_dimension', '=', True)]}"/>
                    <field name="weight" attrs="{'invisible': [('invisible_dimension', '=', True)]}"/>
                    <field name="version_dimension" attrs="{'invisible': [('invisible_dimension', '=', False)]}"/>
                    <field name="version_weight" attrs="{'invisible': [('invisible_dimension', '=', False)]}"/>
                    <field name="total_dimension" />
                    <field name="total_weight" />
                </xpath>
            </field>
        </record>

    </data>
</openerp>
